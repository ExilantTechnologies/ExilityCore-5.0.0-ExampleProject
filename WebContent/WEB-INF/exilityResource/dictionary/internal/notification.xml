  <groups>
    <dataGroup name="notification"
               label="Notifications"  >
      <elements>
        <dataElement  name="notificationId"
                      dataType="id"
                      label="Internal Id"
                      businessDescription="Internally generated. Unique across all types of notifications"
                      />
        <dataElement name="requiresAction"
                     dataType="boolean"
                     label="Requires Action"
                     businessDescription="Is it for the user to take some action"
                     />
        <dataElement name="possibleActions"
                     dataType="text"
                     label="PossibleActions"
                     businessDescription="all the actions that the user can take on this item. Coded as actionName1=label1;actionName2=label2..."
                     />
        <dataElement name="documentType"
                     dataType="entityName"
                     label="Document Type"
                     businessDescription="Document that the notification is about"
                      />
      </elements>
    </dataGroup>
  </groups>
